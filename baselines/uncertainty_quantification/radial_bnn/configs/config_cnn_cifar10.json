{
    "name": "toy_cnn_mnist",
    "n_gpu": 1,
    "seed": "random",
    
    "arch": {
        "type": "Seven_layer_Classifier",
        "args": {
            "in_channels": 1,
            "out_features": 10,
            "initial_rho": -4,
            "initial_mu_std": "he",
            "variational_distribution": "radial",
            "prior": {
                "name": "gaussian_prior",
                "sigma": 1,
                "mu": 0
            }
        }
    },
    "data_loader": {
        "type": "FashionMNISTDataLoader",
        "args": {
            "root": "data/FashionMNIST",
            "batch_size": 200,
            "num_workers": 2,
            "percent_used_for_validation": 0.9
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 5e-4,
            "amsgrad": true
        }
    },
    "loss": {
        "type": "Elbo",
        "args": {
            "binary": false,
            "regression": false
        }
    },
    "metrics": [
        "variational_accuracy"
    ],
    "trainer": {
        "epochs": 50,
        "save_dir": "projects/fashionmnist_cnn/saved/",
        "save_freq": 4,
        "metric_freq": 10,
        "eval_freq": 4,
        "verbosity": 2,
        "monitor": "variational_accuracy",
        "monitor_mode": "max",
        "variational_train_samples": 1,
        "variational_eval_samples": 32,
        "pretrain_epochs": 1,
        "early_stopping": 10
    },
    "visualization":{
        "tensorboardX": true,
        "log_dir": "projects/fashionmnist_cnn/runs"
    }
}
